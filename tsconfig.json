{
  "compilerOptions": {
    "lib": ["esnext"],
    "typeRoots": ["node_modules/@types"],
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts"]
}
